<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Nombre del producto -->
    <TextView
        android:id="@+id/tvNombreProductoComun"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/producto"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/checkBoxProducto"
        app:layout_constraintBottom_toBottomOf="@id/checkBoxProducto"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- CheckBox para seleccionar el producto -->
    <CheckBox
        android:id="@+id/checkBoxProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvNombreProductoComun"/>
</androidx.constraintlayout.widget.ConstraintLayout>