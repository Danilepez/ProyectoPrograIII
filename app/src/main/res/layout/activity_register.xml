<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    tools:context=".RegisterActivity">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="96dp"
        android:layout_height="73dp"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/back"
        android:scaleType="centerCrop"
        android:layout_marginTop="15dp"
        android:src="@drawable/flecha_atras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- TÃ­tulo -->
    <TextView
        android:id="@+id/regis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Ese"/>

    <EditText
        android:id="@+id/nombreed"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/FondoEditText"
        android:textColorHint="#FFFFFF"
        android:hint="Nombre:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <EditText
        android:id="@+id/correoed"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/FondoEditText"
        android:textColorHint="#FAFAFA"
        android:hint="Correo:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nombreed"
        app:layout_constraintBottom_toBottomOf="parent" />

    <EditText
        android:id="@+id/passwded"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:hint="Nueva password:"
        android:background="@drawable/FondoEditText"
        android:textColorHint="#FFFDFD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/correoed"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>